pipeline {
    agent none 
    stages {
        stage('BUILD') {
            agent any
            steps {
                sh '''
                    #!/bin/bash 
                    pwd 
                    ls
                    echo "This is a BUILD stage"
                    sleep 5
                '''  
            }
        }
        stage('DEPLOY') {
            agent { label 'slavenode_1' } 
            steps {
                echo "This is a DEPLOY stage"
                sh 'sleep 5'
            }
        }
        stage('TESTING1') {
            agent { label 'slavenode_1' } 
            steps {
                sh 'echo "This is a TESTING1 stage"'
                sh 'sleep 5'
            }
        }
        stage('TESTING2') {
            agent { label 'slavenode_1' } 
            steps {
                sh '''
                    echo "This is a TESTING2 stage"
                    sleep 5
                '''
            }
        }
    }
}
